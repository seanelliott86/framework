{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "indentation": "tab",
    "color-no-invalid-hex": true,
    "property-no-unknown": true,
    "max-nesting-depth": [1, {
      ignore: ["at-rules-without-declaration-blocks"]
    }],
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends"
      ]
    }],
  }
}
